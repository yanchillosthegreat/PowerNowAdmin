@page
@model Costumer.RegistrationModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="middle-box text-center loginscreen  animated fadeInDown">
    @Html.AntiForgeryToken();
    <div>
        <h1 class="logo-name">PN</h1>
    </div>
    <h3>Регистрация по смс</h3>
    <div class="animated fadeInRight" id="phone-block">
        <form class="m-t" method="POST" id="enter-phone-form">
            <span class="text-center text-danger">@Model.ErrorMessage</span>
            <div class="form-group">
                <input type="tel" id="phone-input" asp-for="@Model.Costumer.Phone" class="form-control" placeholder="Phone" required="">
            </div>
            <button type="submit" id="phone-submit" class="ladda-button btn btn-primary full-width m-b" data-style="zoom-in">
                Получить SMS
            </button>
        </form>
    </div>

    <div class="animated fadeInRight" id="phone-code-block" style="display: none;">
        <form class="m-t" method="POST" id="enter-phone-code-form">
            <span class="text-center text-danger">@Model.ErrorMessage</span>
            <div class="form-group">
                <input type="tel" id="phone-verification-input" asp-for="@Model.Costumer.Phone" class="form-control hidden" placeholder="Code" required="">
            </div>
            <div class="form-group">
                <input type="text" asp-for="@Model.VerificationCode" class="form-control" placeholder="Code" required="">
            </div>
            <button type="submit" id="phone-code-submit" class="ladda-button btn btn-primary full-width m-b" data-style="zoom-in">
                Проверить код
            </button>
        </form>
    </div>

</div>