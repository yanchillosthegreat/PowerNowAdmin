@page
@model Pages.Admin.Powerbanks.IndexModel
<div class="wrapper-content">
@Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Добавить Powerbank</h5>
                </div>
                <div class="ibox-content">
                    <form id="add-powerbank-form">
                        @Html.AntiForgeryToken();
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">
                                Local Code
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" data-mask="9_9_9_9" required=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">
                                Choose Holder
                            </label>
                            <div class="col-sm-10">
                                <select>
                                    <option>1_2_3_1</option>
                                    <option>1_2_3_4</option>
                                </select>
                            </div>
                        </div>
                        <button id="add-powerbank-submit-button" type="submit" class="btn btn-sm btn-warning ladda-button">Добавить!(TODO)</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Powerbanks</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="table-responsive">
                            <table id="holders-table" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Code</th>
                                        <th>Session</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{var i = 0;}
                                    @foreach (var pb in Model.Powerbanks)
                                    {
                                        <tr id="@pb.Id">
                                            <td>@pb.Id</td>
                                            <td>@pb.Code</td>
                                            <td>@pb.Sessions?.LastOrDefault()?.Costumer?.Phone</td>
                                            <td>
                                                @if(@pb.Sessions?.LastOrDefault()?.IsActive ?? false)
                                                {
                                                    <span class="badge badge-primary">Active</span>

                                                }else
                                                {
                                                    <span class="badge badge-warning">Finished</span>
                                                }

                                            </td>
                                            <td>
                                                <button class="button btn-xs btn-warning" onclick="stopSession(@pb.Id)">stop</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script type="text/javascript">
        function stopSession(idPowerBank) {
            var token = $('input[name="__RequestVerificationToken"]').val()
            var request = $.ajax({
                url: "/admin/powerbanks?handler=stop",
                type: "POST",
                dataType: "json",
                data: {
                    __RequestVerificationToken: token,
                    id: idPowerBank
                },
                success: function (response) {
                    switch (response.code) {
                        case 200:
                            alert("Session Stopped");
                            $("tr#"+idPowerBank).find("td:eq(3)").html("<span class='badge badge-warning'>Finished</span>");
                            break;
                        default:
                            alert(response.message);
                            break;
                    }
                }
            });
        }
    </script>